{
  "name": "voicecraft",
  "version": "1.0.0",
  "private": true,
  "description": "VoiceCraft - Desktop AI Voice Cloning & TTS App",
  "author": "VoiceCraft Team",
  "license": "MIT",
  "workspaces": [
    "electron",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "cd electron && npm start",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "cd electron && npm run build",
    "start": "cd electron && npm start"
  },
  "devDependencies": {
    "app-builder-bin": "^5.0.0-alpha.10",
    "concurrently": "^8.2.2",
    "electron-builder": "^25.1.8"
  }
}
